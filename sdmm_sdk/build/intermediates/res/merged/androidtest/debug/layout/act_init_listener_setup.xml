<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:layout_weight="1"
	> 
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:background="@color/instBlack"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:padding="10dp"
	    >
		<TextView 
			android:id="@+id/initListenerTitle" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/initLocationTitleTxt"
			android:gravity="center"
			android:textAppearance="?android:attr/textAppearanceLarge"
			/>
    	<TextView 
			android:id="@+id/initListenerInstructionsLbl" 
			android:text="@string/initListenerInstructionsLblTxt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:padding="10dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:background="@color/instWhite"
			android:textColor="@color/instBlack"
			/> 
    	<TextView 
			android:id="@+id/initListenerInstructionsLbl2" 
			android:text="@string/initListenerInstructionsLblTxt2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:padding="10dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background="@color/instWhite"
			android:textColor="@color/instBlack"
			android:gravity="center"
			/> 
	</LinearLayout>
</ScrollView>